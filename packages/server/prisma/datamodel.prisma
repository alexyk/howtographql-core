type User {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!

  name: String!
  email: String @unique

  githubHandle: String! @unique
  githubUserId: String! @unique
  avatarUrl: String
  bio: String!

  posts: [Post!]!
}

type Post {
  id: ID! @unique
  title: String!
  content: String!
  published: Boolean! @default(value: "false")
  author: User!
}
