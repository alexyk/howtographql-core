type User {
  id: ID! @unique
  name: String!
  email: String!
  createdAt: DateTime!
  updatedAt: DateTime!
  contributor: Boolean!
  expertise: String @unique
  bio: String
  userTutorials: [UserTutorial!]! @relation(name: "UseronUserTutorial")
}

type UserTutorial {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  user: User @relation(name: "UseronUserTutorial")
  tutorial: Tutorial @relation(name: "TutorialonUserTutorial")
  upvoted: Boolean!
  saved: Boolean!
  currentChapter: Int!
}

type Tutorial {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  name: String!
  gatsbyID: String!
  upvotes: Int!
  numberOfStudents: Int!
  numberofChapters: Int!
  userTutorials: [UserTutorial!]! @relation(name: "TutorialonUserTutorial")
}
