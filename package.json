{
  "name": "howtographql2",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/howtographql/howtographql2.git",
  "author": "Novvum",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lerna": "lerna",
    "dev": "npm-run-all --parallel 'site develop' 'server dev'",
